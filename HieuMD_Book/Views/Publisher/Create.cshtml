
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <form role="form" action="/Publisher/Create/" method="Post">
                <div class="form-group">

                    <label>
                        Name
                    </label>
                    <input type="text" class="form-control" name="Name" style="width:300px"/>
                </div>
                <div class="form-group">

                    <label>
                        Description
                    </label>
                    <input type="text" class="form-control" name="Description" style="width:300px"/>
                </div>


                <button type="submit" class="btn btn-success">
                    Submit
                </button>
            </form>
        </div>
    </div>
</div

